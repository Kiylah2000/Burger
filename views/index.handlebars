<div class="container">
  <div class="left">
    <ul>
      {{#each burger}}
      <li>
        {{#unless devoured}}
        {{this.id}}. {{this.burger_name}}
        <button class="devour" data-id="{{this.id}}">
          Devour
        </button>
        {{/unless}}
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="middle">

    <h1>Eat Da Burger!</h1>
     <h3>Enter your favorite Burger and devour it</h3>
  </div>
  <div class="middle-bottom">
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="burger-name" name="name">
      </div>
      <button type="submit" id='add-burger' class='btn btn-warning btn-lg btn-block'>Add Burger</button>
    </form>

  </div>
  <div class="right">
    <ul>
      {{#each burgers}}
      <li>
        {{#if devoured}}
        {{this.id}}. {{this.burger_name}}
        {{/if}}
      </li>
      {{/each}}
    </ul>
  </div>
</div>